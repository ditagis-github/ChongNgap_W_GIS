@model IEnumerable<WebTNBDGIS.Models.Video>

@{
    ViewBag.Title = "Quản lý link youtube";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="content">
    <div class="page-header">Quản lý video youtube</div>
    <input type="button" id="insert-data" class="btn btn-custom" value="Thêm mới" onclick="location.href='@Url.Action("Create")'" />

    <table id="tbvideo" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>
                    Link youtube

                </th>
                <th>
                    Mô tả
                </th>
                <th>
                    Chức năng
                </th>
            </tr>
        </thead>
        
        <tbody>
            @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Link)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mota)
                            </td>
                            <td>
                                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.ID }) |
                                @Html.ActionLink("Chi tiết", "Details", new { id = item.ID }) |
                                @Html.ActionLink("Xóa", "Delete", new { id = item.ID })
                            </td>
                        </tr>
                    }
        </tbody>
    </table>
</div>

