@model WebTNBDGIS.Models.UserInGroup

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h3 class="page-header">Gán nhóm quyền cho người dùng</h3>


@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>

        @Html.HiddenFor(model => model.id)

       
        <div class="editor-label">
            @Html.LabelFor(model => model.UserID)
        </div>
        <div class="editor-field">
            @Html.DropDownList("UserID", null , new { @disabled = true })
            @Html.ValidationMessageFor(model => model.UserID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.GroupID)
        </div>
        <div class="editor-field">
            @Html.DropDownList("GroupID", String.Empty)
            @Html.ValidationMessageFor(model => model.GroupID)
        </div>
        <input type="submit" value="Đồng ý" />
        &nbsp |  @Html.ActionLink("Quay lại danh sách", "Index","AdminUsers")

    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
