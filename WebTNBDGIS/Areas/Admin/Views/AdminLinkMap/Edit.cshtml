@model  WebGISRainfall.Resource.Model.linkMap

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h3 class="page-header">Cập nhật </h3>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>

        @Html.HiddenFor(model => model.id)

        <div class="editor-label">
            @Html.LabelFor(model => model.link)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.link)
            @Html.ValidationMessageFor(model => model.link)
        </div>

        <div class="editor-field">
            <select name="typeMap" id="typeMap">
                <option value="maxNgay" @(Model.typeMap.Trim() == "maxNgay" ? "selected=\"selected\"" : "")>Bản đồ mưa lớn nhất ngày</option>
                <option value="tbThang" @(Model.typeMap.Trim() == "tbThang" ? "selected=\"selected\"" : "")>Bản đồ mưa trung bình các tháng</option>
                <option value="minThang" @(Model.typeMap.Trim() == "minThang" ? "selected=\"selected\"" : "")>Bản đồ mưa nhỏ nhất các tháng</option>
                <option value="maxThang" @(Model.typeMap.Trim() == "maxThang" ? "selected=\"selected\"" : "")>Bản đồ mưa lớn nhất các tháng</option>
                <option value="tbnam" @(Model.typeMap.Trim() == "tbnam" ? "selected=\"selected\"" : "")>Bản đồ mưa trung bình các năm</option>
                <option value="minnam" @(Model.typeMap.Trim() == "minnam" ? "selected=\"selected\"" : "")>Bản đồ mưa nhỏ nhất các năm</option>
                <option value="maxnam" @(Model.typeMap.Trim() == "maxnam" ? "selected=\"selected\"" : "")>Bản đồ mưa lớn nhất các năm</option>
            </select>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.mota)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.mota)
            @Html.ValidationMessageFor(model => model.mota)
        </div>

         <p>
            <input type="submit" value="Cập nhật" />
            &nbsp |  @Html.ActionLink("Quay lại danh sách", "Index")
        </p>

    </fieldset>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
