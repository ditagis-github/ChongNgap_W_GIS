@model WebGISRainfall.Resource.Model.linkMap

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h3 class="page-header">Thêm mới link</h3>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.link)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.link)
            @Html.ValidationMessageFor(model => model.link)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.typeMap)
        </div>
        <div class="editor-field">
            <select name="typeMap" id="typeMap">
                <option value="maxNgay">Bản đồ mưa lớn nhất ngày</option>
                <option value="tbThang">Bản đồ mưa trung bình các tháng</option>
                <option value="minThang">Bản đồ mưa nhỏ nhất các tháng</option>
                <option value="maxThang">Bản đồ mưa lớn nhất các tháng</option>
                <option value="tbnam">Bản đồ mưa trung bình các năm</option>
                <option value="minnam">Bản đồ mưa nhỏ nhất các năm</option>
                <option value="maxnam">Bản đồ mưa lớn nhất các năm</option>
            </select>
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.mota)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.mota)
            @Html.ValidationMessageFor(model => model.mota)
        </div>
        <p>
            <input type="submit" value="Tạo mới" />
            &nbsp |  @Html.ActionLink("Quay lại danh sách", "Index")
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
