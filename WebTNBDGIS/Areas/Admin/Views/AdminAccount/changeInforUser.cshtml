@model WebTNBDGIS.Models.ChangeInforUser

@{
    ViewBag.Title = "changeInforUser";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h3 class="page-header">Đổi thông tin cá nhân</h3>


@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.username)
        </div>
        <div class="editor-field">    
        @Html.HiddenFor(model => model.id)  
            @Html.TextBoxFor(model => model.username, new { @readonly = true })
            @Html.ValidationMessageFor(model => model.username)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NameDisplay)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NameDisplay)
            @Html.ValidationMessageFor(model => model.NameDisplay)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.email)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.email)
            @Html.ValidationMessageFor(model => model.email)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.Avartar)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Avartar, new { @readonly = true })
            <input type="button" value="..." onclick="BrowseServer();" /><br />
            @Html.ValidationMessageFor(model => model.Avartar)
            <br />              
            <img id="imgReview" src="@Model.Avartar" />
        </div>

        <p>
            <input type="submit" value="Đổi thông tin" />
            &nbsp |  @Html.ActionLink("Quay lại", "Index","AdminHome")
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script src="~/ckfinder/ckfinder.js"></script>
<script type="text/javascript">

    function BrowseServer() {
        var finder = new CKFinder();
        finder.selectActionFunction = SetFileField;
        finder.popup();
    }
    function SetFileField(fileUrl) {
        document.getElementById('Avartar').value = fileUrl;
        document.getElementById('imgReview').src = fileUrl;
    }
</script>