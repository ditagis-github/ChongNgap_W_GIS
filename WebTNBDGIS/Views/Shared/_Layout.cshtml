<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2018.2.620/styles/kendo.common-material.min.css" />
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2018.2.620/styles/kendo.material.min.css" />
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2018.2.620/styles/kendo.material.mobile.min.css" />
</head>
<body class="claro">
    <div id="header">
        <h1>HỆ THỐNG THÔNG TIN ĐỊA LÝ (GIS) PHỤC VỤ CÔNG TÁC PHÒNG CHỐNG NGẬP LỤT </h1>
        <h3>Tỉnh Bình Dương</h3>
    </div>
    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script>
    var URL_SCRIPTS = "@Url.Content("~/Scripts")";
    </script>
    <script src="~/Scripts/dojoConfig.js"></script>
<script type="text/javascript" src="https://code.jquery.com/jquery-1.7.1.min.js"></script>
<script src="https://kendo.cdn.telerik.com/2018.2.620/js/jquery.min.js"></script>
<script src="https://kendo.cdn.telerik.com/2018.2.620/js/kendo.all.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jszip/2.4.0/jszip.js"></script>
    @RenderSection("scripts", required: false)

    <script>

        $(document).ready(function () {
            var height = $(document).height();

            var headerHeight = $("#header").height();

            headerHeight = (headerHeight + 50);

            height = height - headerHeight;

            //alert(height);

            $("#mapDiv").css("height", height + "px");
           // $(".left_panel").css("height", (height - 20) + "px");
            $(".left_panel").css("max-height", (height - 40) + "px");
            $(".left_panel").slideUp();
            $("#LayerList").slideDown();
        });

    </script>


</body>
</html>
